<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical"
    android:id="@+id/categories"
    tools:context="com.example.robber_hadi.MyMoneyManager.Categories">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/getExpenseBut"
            android:layout_width="8dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_rounded_corners"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="GET EXPENSE "
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/getIncomeBut"
            android:layout_width="8dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_rounded_corners"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="GET INCOME"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/showStat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="status click"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="432dp">

        <ListView
            android:id="@+id/listDataboth"
            android:layout_width="match_parent"
            android:layout_height="443dp">

        </ListView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="14dp"
            android:clickable="true"
            android:foregroundGravity="center"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="mini" />

        <Button
            android:id="@+id/delButCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="DELETE"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </FrameLayout>

</LinearLayout>
